<UserControl x:Class="WiinUPro.NumPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WiinUPro"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="88">
    <Grid>
        <Button x:Name="btnDown" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Height="28" FontSize="32" ToolTip="Identify" Click="btnDown_Click" Content="&lt;" Padding="-2,-12,2,0" FontWeight="Bold" />
        <TextBox x:Name="lblValue" Height="28" Text="100" Width="32" UndoLimit="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,0,0,0" TextAlignment="Center" MaxLines="1" MaxLength="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" TextChanged="lblValue_TextChanged" BorderBrush="#FF707070"/>
        <Button x:Name="btnUp" HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" Height="28" FontSize="32" ToolTip="Identify" Click="btnUp_Click" Margin="60,0,0,0" Content="&gt;" Padding="2,-12,-2,0" FontWeight="Bold" />
    </Grid>
</UserControl>
