                                <MenuItem Header="Quick Assign">
                                    <MenuItem Header="Mouse" Tag="proL" Click="QuickAssign_Click"/>
                                    <MenuItem Header="WASD" Tag="proL" Click="QuickAssign_Click"/>
                                    <MenuItem Header="Arrows" Tag="proL" Click="QuickAssign_Click"/>
