<Window x:Class="WiinUSoft.Windows.SyncWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiinUSoft.Windows"
        mc:Ignorable="d"
        Title="Sync Devices" Height="204.735" Width="300" Icon="../Images/WiinUSoft_Icon32.png" Background="{DynamicResource BrushSocialBlue}" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <TextBlock x:Name="info" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="43"><Run Text="Press the red sync button on the controller to pair."/></TextBlock>
        <TextBox x:Name="prompt" TextWrapping="Wrap" Margin="10,58,10,43.5" IsReadOnly="True" Background="{DynamicResource BrushAntemWhite}"/>
        <Button x:Name="cancelBtn" Content="Cancel" Margin="0,0,10,10" Background="{DynamicResource ButonFillBrush1}" BorderBrush="{DynamicResource BrushAntemBlue}" FontWeight="Bold" Foreground="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}" HorizontalAlignment="Right" Width="64" Height="26" VerticalAlignment="Bottom" Click="cancelBtn_Click"/>

    </Grid>
</Window>
