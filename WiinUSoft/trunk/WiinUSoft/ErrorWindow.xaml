<Window x:Class="WiinUSoft.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErrorWindow" Height="300" Width="300">
    <Grid>
        <Label Content="Uh-oh, something went wrong..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_errorMessage" Content="Message" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="_errorStack" HorizontalAlignment="Left" Height="155" Margin="10,71,0,0" TextWrapping="Wrap" Text="More Info" VerticalAlignment="Top" Width="274"/>
        <Button x:Name="_sendBtn" Content="Send" HorizontalAlignment="Left" Margin="209,241,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="_dontSendBtn" Content="Don't Send" HorizontalAlignment="Left" Margin="120,241,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
