<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiinUPro.Windows"
        xmlns:WiinUPro="clr-namespace:WiinUPro" x:Class="WiinUPro.Windows.IRCalibrationWindow"
        mc:Ignorable="d"
        Title="IR Calibration" Height="578.205" Width="876.088" Loaded="Window_Loaded">
  <Window.Background>
    <StaticResource ResourceKey="BackgroundMain"/>
  </Window.Background>
  <Grid Background="{StaticResource BackgroundSub}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="550*"/>
      <ColumnDefinition Width="343*"/>
    </Grid.ColumnDefinitions>
    <Viewbox Grid.Column="0" Margin="0,0,0,0">
      <Canvas Width="1023" Height="763" Background="{StaticResource BackgroundMain}">
        <Rectangle x:Name="box" Canvas.Top="343" Canvas.Left="460" StrokeThickness="0" Width="102" Height="77" HorizontalAlignment="Center" VerticalAlignment="Center" >
          <Rectangle.Fill>
            <SolidColorBrush Color="{StaticResource B550}"/>
          </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="area" Canvas.Top="10" Canvas.Left="10" StrokeThickness="1" Width="1003" Height="748" HorizontalAlignment="Center" VerticalAlignment="Center" >
          <Rectangle.Stroke>
            <SolidColorBrush Color="{StaticResource Yellow}"/>
          </Rectangle.Stroke>
        </Rectangle>
        <Ellipse x:Name="point1" StrokeThickness="0" Canvas.Top="0" Canvas.Left="0" Width="10" Height="10" Opacity="0">
          <Ellipse.Fill>
            <SolidColorBrush Color="{StaticResource RedDark}"/>
          </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="point2" StrokeThickness="0" Canvas.Top="0" Canvas.Left="0" Width="10" Height="10" Opacity="0">
          <Ellipse.Fill>
            <SolidColorBrush Color="{StaticResource RedDark}"/>
          </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="point3" StrokeThickness="0" Canvas.Top="0" Canvas.Left="0" Width="10" Height="10" Opacity="0">
          <Ellipse.Fill>
            <SolidColorBrush Color="{StaticResource RedDark}"/>
          </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="point4" StrokeThickness="0" Canvas.Top="0" Canvas.Left="0" Width="10" Height="10" Opacity="0">
          <Ellipse.Fill>
            <SolidColorBrush Color="{StaticResource RedDark}"/>
          </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="output" StrokeThickness="0" Canvas.Top="375" Canvas.Left="505" Width="12" Height="12">
          <Ellipse.Fill>
            <SolidColorBrush Color="{DynamicResource Green}"/>
          </Ellipse.Fill>
        </Ellipse>
      </Canvas>
    </Viewbox>
    <Grid  Background="{StaticResource BackgroundSub}" Grid.Column="1">
      <GroupBox x:Name="groupBox" Header="DeadZone" Margin="10,10,9.798,0" VerticalAlignment="Top" Height="108" Style="{StaticResource GroupBoxStyle}" Uid="Calibration_IR_Dead_Box">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <WiinUPro:NumPicker x:Name="boxX" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top" Max="1020" Min="0" Value="256" OnValueUpdate="BoxUpdated"/>
          <Label x:Name="label" Content="X" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextHeader}" FontWeight="Bold"/>
          <WiinUPro:NumPicker x:Name="boxY" HorizontalAlignment="Left" Margin="35,48,0,0" VerticalAlignment="Top" Max="1020" Min="0" Value="192" OnValueUpdate="BoxUpdated"/>
          <Label x:Name="label_Copy" Content="Y" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextHeader}" FontWeight="Bold"/>
          <WiinUPro:NumPicker x:Name="boxWidth" Margin="0,10,0.092,0" VerticalAlignment="Top" Max="1020" Min="0" Value="102" OnValueUpdate="BoxUpdated" Width="88" HorizontalAlignment="Right"/>
          <Label x:Name="label_Copy1" Content="Width" HorizontalAlignment="Left" Margin="142,11,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextHeader}" FontWeight="Bold" Uid="Calibration_IR_Width" Width="67" HorizontalContentAlignment="Right"/>
          <WiinUPro:NumPicker x:Name="boxHeight" HorizontalAlignment="Right" Margin="0,47,0.092,0" VerticalAlignment="Top" Max="1020" Min="0" Value="77" OnValueUpdate="BoxUpdated"/>
          <Label x:Name="label_Copy2" Content="Height" HorizontalAlignment="Left" Margin="142,50,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextHeader}" FontWeight="Bold" Uid="Calibration_IR_Heigth" Width="67" HorizontalContentAlignment="Right"/>
        </Grid>
      </GroupBox>
      <GroupBox x:Name="groupArea" Header="Area" Margin="10,121,9.798,0" VerticalAlignment="Top" Height="108" Style="{StaticResource GroupBoxStyle}" Uid="Calibration_IR_Box">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <WiinUPro:NumPicker x:Name="areaLeft" HorizontalAlignment="Left" Margin="58,10,0,0" VerticalAlignment="Top" Max="1020" Min="0" Value="256" OnValueUpdate="AreaUpdated"/>
          <Label x:Name="areaLabel" Content="Left" HorizontalAlignment="Left" Margin="-2,10,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextHeader}" FontWeight="Bold" Uid="Calibration_IR_Left" Width="55" HorizontalContentAlignment="Right"/>
          <WiinUPro:NumPicker x:Name="areaRight" HorizontalAlignment="Left" Margin="58,49,0,0" VerticalAlignment="Top" Max="1020" Min="0" Value="192" OnValueUpdate="AreaUpdated"/>
          <Label x:Name="areaLabel_Copy" Content="Right" HorizontalAlignment="Left" Margin="0,50,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextHeader}" FontWeight="Bold" Uid="Calibration_IR_Right" Width="53" HorizontalContentAlignment="Right"/>
          <WiinUPro:NumPicker x:Name="areaTop" HorizontalAlignment="Left" Margin="215,10,-0.908,0" VerticalAlignment="Top" Max="1020" Min="0" Value="102" OnValueUpdate="AreaUpdated"/>
          <Label x:Name="areaLabel_Copy1" Content="Top" HorizontalAlignment="Left" Margin="146,10,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextHeader}" FontWeight="Bold" Uid="Calibration_IR_Top" Width="64" HorizontalContentAlignment="Right"/>
          <WiinUPro:NumPicker x:Name="areaBottom" HorizontalAlignment="Left" Margin="215,47,-0.908,0" VerticalAlignment="Top" Max="1020" Min="0" Value="77" OnValueUpdate="AreaUpdated"/>
          <Label x:Name="areaLabel_Copy2" Content="Bottom" HorizontalAlignment="Left" Margin="143,50,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextHeader}" FontWeight="Bold" Uid="Calibration_IR_Bottom" Width="67" HorizontalContentAlignment="Right"/>
        </Grid>
      </GroupBox>
      <GroupBox x:Name="groupOffscreen" Header="When Off Screen" Margin="10,232,9.798,0" VerticalAlignment="Top" Height="78" Style="{StaticResource GroupBoxStyle}" Uid="Calibration_IR_Screen">
        <Grid>
          <RadioButton x:Name="radioLast" Content="Use last good point" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" GroupName="offScreen" IsChecked="True" Style="{StaticResource RadioButtonStyle}" Checked="ScreenBehaviorChange" Uid="Calibration_IR_Last_Good"/>
          <RadioButton x:Name="radioCenter" Content="Return to center" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" GroupName="offScreen" Style="{StaticResource RadioButtonStyle}" Checked="ScreenBehaviorChange" Uid="Calibration_IR_Center"/>
        </Grid>
      </GroupBox>
      <GroupBox x:Name="groupMinPoints" Header="Minimum Visible Points" Margin="10,312,9.798,0" VerticalAlignment="Top" Height="64" Style="{StaticResource GroupBoxStyle}" Uid="Calibration_IR_Points">
        <Grid>
          <ComboBox x:Name="minVisiblePoints" Margin="10,10,27.092,0" VerticalAlignment="Top" SelectionChanged="visiblePoints_SelectionChanged">
            <ComboBoxItem Content="Default" Uid="Calibration_IR_Points_Default"/>
            <ComboBoxItem Content="One" Uid="Calibration_IR_Points_One"/>
            <ComboBoxItem Content="Two" Uid="Calibration_IR_Points_Two"/>
          </ComboBox>
        </Grid>
      </GroupBox>
      <!--
            <Label Content="Jitter Reduction" HorizontalAlignment="Left" Margin="10,221,0,0" VerticalAlignment="Top" Height="26" Width="102" FontWeight="Bold" Foreground="{StaticResource TextHeader}" Uid="Calibration_IR_Jitter"/>
            <Slider x:Name="jitterSlider" HorizontalAlignment="Left" Margin="23,248,0,0" VerticalAlignment="Top" Width="285" Height="34" TickPlacement="BottomRight" Maximum="10" Interval="1" ValueChanged="jitterSlider_ValueChanged" IsSnapToTickEnabled="True" IsMoveToPointEnabled="True" Style="{StaticResource BasicSliderStyle}" IsEnabled="False"/>
            <Label x:Name="jitterLabel" Content="0 %" HorizontalAlignment="Left" Margin="248,221,0,0" VerticalAlignment="Top" Width="60" HorizontalContentAlignment="Right" FontWeight="Bold" Foreground="{StaticResource TextHeader}"/>
          -->
      <Button x:Name="acceptBtn" Content="Accept" HorizontalAlignment="Right" Margin="0,0,16.4,9.8" VerticalAlignment="Bottom" Width="76" Click="acceptBtn_Click" Style="{StaticResource AcceptButton}" Uid="Button_Accept"/>
      <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,104.4,9.8" VerticalAlignment="Bottom" Width="74" Click="cancelBtn_Click" Style="{StaticResource WarningButton}" Uid="Button_Cancel"/>
      <Button x:Name="loadBtn" Content="Load" HorizontalAlignment="Left" Margin="-88,0,0,9.697" VerticalAlignment="Bottom" Width="76" Click="loadBtn_Click" Style="{StaticResource BasicButton}" Uid="Button_Load"/>
      <Button x:Name="saveBtn" Content="Save" HorizontalAlignment="Left" Margin="-178,0,0,9.697" VerticalAlignment="Bottom" Width="76" Click="saveBtn_Click" Style="{StaticResource BasicButton}" Uid="Button_Save"/>
    </Grid>
  </Grid>
</Window>
