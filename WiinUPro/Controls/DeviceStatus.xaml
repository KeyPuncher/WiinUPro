<UserControl x:Class="WiinUPro.DeviceStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WiinUPro"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="240">
    <Grid>
        <Image x:Name="icon" Height="64" Width="64" Source="/WiinUPro;component/Images/Icons/ProController_black_24.png" HorizontalAlignment="Left"/>
        <Label x:Name="nickname" Content="Unidentified Controller" HorizontalAlignment="Left" Margin="69,0,0,0" VerticalAlignment="Top" Width="171"/>
        <Label x:Name="status" Content="Not Connected" HorizontalAlignment="Left" Margin="69,16,0,0" VerticalAlignment="Top"/>
        <Button x:Name="connectBtn" Content="Connect" HorizontalAlignment="Left" Margin="71,42,0,0" VerticalAlignment="Top" Width="75" Click="connectBtn_Click" Style="{StaticResource BasicButton}" Uid="Status_Connect_Btn"/>
        <Button x:Name="connectAsBtn" Visibility="Hidden" Content="Connect As" HorizontalAlignment="Left" Margin="151,42,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Style="{StaticResource BasicButton}" />

    </Grid>
</UserControl>
